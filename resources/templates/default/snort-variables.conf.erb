<% unless @vgroup["ipvars"].nil? %>
<% if !@vgroup["ipvars"]["HOME_NET"].nil? %>
ipvar HOME_NET <%= @vgroup["ipvars"]["HOME_NET"] %>
<% end %>
<% @vgroup["ipvars"].each do |var| %>
<% if var[0]!="HOME_NET" %>
ipvar <%= var[0] %> <%= var[1].gsub(" ", "").split(",").map{|x| (x=="HOME_NET" ? "$HOME_NET" : (x=="!HOME_NET" ? "!$HOME_NET" : x) ) }.join(",") %>
<%- end %>
<%- end %>
<%- end %>

<% unless @vgroup["portvars"].nil? %>
<% @vgroup["portvars"].each do |var| %>
portvar <%= var[0] %> <%= var[1].gsub(" ", "") %>
<%- end %>
<%- end %>

